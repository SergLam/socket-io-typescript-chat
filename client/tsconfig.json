{
  "compileOnSave": false,
  "compilerOptions": {

    "noImplicitAny": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "suppressImplicitAnyIndexErrors": true, // Don't forget to add the comma here.
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": ["node", "reflect-metadata"],
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "es2015.iterable",
      "es2015.promise",
      "es2015.symbol",
      "es2015.symbol.wellknown"
    ]

  },
  "files": [
    "src/main.ts",
    "src/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
